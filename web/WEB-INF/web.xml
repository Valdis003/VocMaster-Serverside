<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <servlet>
        <servlet-name>translateServlet</servlet-name>
        <servlet-class>main.java.servlets.TranslateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>translateServlet</servlet-name>
        <url-pattern>/translate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addCard</servlet-name>
        <servlet-class>main.java.servlets.AddCardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addCard</servlet-name>
        <url-pattern>/add_card</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>main.java.servlets.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>main.java.servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>closeSession</servlet-name>
        <servlet-class>main.java.servlets.auth.CloseSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>closeSession</servlet-name>
        <url-pattern>/close_session</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>main.java.servlets.auth.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>yandex</servlet-name>
        <servlet-class>main.java.servlets.PostToYandexDict</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>yandex</servlet-name>
        <url-pattern>/yandex</url-pattern>
    </servlet-mapping>
</web-app>